{
"Logging": {
  "LogLevel": {
    "Default": "Information",
    "Microsoft.AspNetCore": "Warning",
    "Microsoft.EntityFrameworkCore": "Warning",
    "MailUptime.Services": "Information",
    "MailUptime.Controllers": "Information"
  }
},
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=MailUptime.db"
  },
  "MailboxSettings": {
    "Protocol": "Imap",
    "Host": "imap.gmail.com",
    "Port": 993,
    "UseSsl": true,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "PollingFrequencySeconds": 300,
    "ExpectedSenderEmails": [],
    "ReportConfig": [
      {
        "Name": "gmail-backup-check",
        "ExpectedSenderEmails": ["backup-service@example.com", "alerts@example.com"],
        "ExpectedSubjectPattern": ".*Daily Backup.*",
        "ExpectedBodyPattern": ".*Success.*",
        "FailSubjectPattern": ".*Backup.*Failed.*",
        "FailBodyPattern": ".*Error.*"
      },
      {
        "Name": "outlook-alerts",
        "Host": "outlook.office365.com",
        "Username": "your-email@outlook.com",
        "Password": "your-password",
        "PollingFrequencySeconds": 600
      },
      {
        "Name": "pop3-monitoring",
        "Protocol": "Pop3",
        "Host": "pop.example.com",
        "Port": 995,
        "Username": "user@example.com",
        "Password": "password",
        "PollingFrequencySeconds": 120,
        "ExpectedSenderEmails": ["monitoring@system.local"]
      }
    ]
  }
}
